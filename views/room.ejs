</head>

<body>
    <div class="main">
        <div class="left">
            <div class="video-container">
                <div id="stars"></div>
                <div id="stars2"></div>
                <div id="stars3"></div>
                <div id="video-box">

                </div>
            </div>
            <div class="controls">

                <div onclick="toggleAudio()" class="controls_button MuteBtn">
                    <i class="fas fa-microphone"></i>
                    <span>Mute</span>
                </div>
                <div onclick="toggleVideo()" class="controls_button videoBtn">
                    <i class="fas fa-video"></i>
                    <span>Stop Video</span>
                </div>

                <div onclick="screenShare()" class="controls_button">
                    <i class="fas fa-photo-video"></i>
                    <span>ScreenShare</span>
                </div>

                <div class="controls_button" id="inviteButton">
                    <i class="fa fa-share-alt"></i>
                    <span>Invite</span>
                </div>

                <div onclick="raisedHand()" class="controls_button raisedHand">
                    <i class="far fa-hand-paper"></i>
                    <span>Hand</span>
                </div>


                <div onclick="hideChat()" class="controls_button">
                    <i class="far fa-comment-alt"></i>
                    <span>Chat</span>
                </div>


                <div onclick="disconnectNow()" class="controls_button LeaveBtn">
                    <i class="fas fa-sign-out-alt" style="color: red;"></i>
                    <span>Leave</span>
                </div>
            </div>
        </div>

        <div class="right" id="chatWindow">
            <div class="header">
                <span id="chat_display" class="header_child">Chat</span>
                <div class="header_child" id="cross_icon"><i class="fas fa-times-circle"></i></div>

            </div>
            <div class="header join-chat">
               <button id="joinChatRoom">Leave Meeting and Go to Chat Room</button> 
            </div>

            <div class="chat_window">
                <div class="messages">

                </div>
            </div>

            <div class="publisher bt-1 border-light">
                <img class="avatar avatar-xs" src="https://img.icons8.com/color/36/000000/administrator-male.png"
                    alt="...">
                <input class="publisher-input" id="chat_message" type="text" placeholder="Write something">
                <i class="fa fa-paper-plane" id="sendBtn"></i></a>
            </div>

        </div>
    </div>


</body>
<script src="client.js" defer></script>

</html>

