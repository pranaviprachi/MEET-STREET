    </script>

    <!-- to use socket.io in our frontend -->
    <!-- this will load all our sokcet.io js code into our frontend and serving it from our own server -->
    <script src="/socket.io/socket.io.js"></script>

    <script src="https://kit.fontawesome.com/3a565b94bd.js" crossorigin="anonymous"></script>

    <!-- //importing peerjs in our frontend -->
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>

    <!-- Set the ROOM_ID variable to the roomId that is passed in by server.js -->
